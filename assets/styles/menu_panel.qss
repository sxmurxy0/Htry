QMenuPanel {
	background-color: transparent;
	padding-left: 5px;
}

QMenuPanelButton {
	height: 31px;
	font-size: 10.5pt;
	background-color: transparent;
	border-radius: 5px;
	padding: 0px 10px 0px 9px;
}

QMenuPanelButton:hover, QMenuPanelButton:open {
	background-color: #ebe9f0;
}

QMenuPanelButton::menu-indicator {
	width: 0px;
	height: 0px;
}